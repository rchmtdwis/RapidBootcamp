@model RapidBootcamp.WebApplication.Models.Customer

<html>
    <head>
        <title>Edit Customer</title>
    </head>
    
    <body>
        <h1>Edit Customer @Model.CustomerName</h1>
        <p>@ViewBag.ErrorMessage</p>
        <form action="/Customers/Edit" method="post">
            <div class="">
                <input type="hidden" value="@Model.CustomerId" name="CustomerId">
                <label for="CustomerName">Customer Name: </label>
                <input type="text" name="CustomerName" value="@Model.CustomerName" onchange="CustomerName">

                <label for="Address">Address: </label>
                <input type="text" name="Address" value="@Model.Address" onchange="Address">

                <label for="City">City: </label>
                <input type="text" name="City" value="@Model.City" onchange="City">

                <label for="Email">Email: </label>
                <input type="text" name="Email" value="@Model.Email" onchange="Email">

                <label for="PhoneNumber">PhoneNumber: </label>
                <input type="text" name="PhoneNumber" value="@Model.PhoneNumber" onchange="PhoneNumber">
            </div>
            <div class="">
                
                <input type="submit" value="Edit">
            </div>
        </form>
    </body>
</html>
